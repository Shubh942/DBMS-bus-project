                      <form action="/action2" method="post"> 
                        <h5 id="gap">Create your account</h5>
      
                        <div class="form-outline mb-4">
                          <label class="form-label" for="form2Example11">Name</label>
                          <input type="text" id="txtName" class="form-control" 
                            placeholder="Name" required  />
                            <span id = "message1" style="color:red"> </span>
                        </div>
      
                        <div class="form-outline mb-4">
                          <label class="form-label" for="form2Example22">Roll Number</label>
                          <input type="text" id="txtRollNo" class="form-control" name="roll"
                          placeholder="Roll No" onclick="return Validate1()" />
                          <span id = "message2" style="color:red"> </span>
                        </div>
                        <div class="form-outline mb-4">
                          <label class="form-label" for="form2Example22">Email-ID</label>
                          <input type="email" id="txtEmail" onclick="return Validate2()" class="form-control" name="userid"
                          placeholder="e-mail id" />
                          <span id = "message3" style="color:red"> </span>
                        </div>
                        <div class="form-outline mb-4">
                          <label class="form-label" for="form2Example22">Password</label>
                          <input type="password" onclick="return Validate3()" id="txtPassword" class="form-control" name="pass"
                          placeholder="Password" />
                        </div>
                        <div class="form-outline mb-4">
                          <label class="form-label"  for="form2Example22">Confirm Password</label>
                          <input type="password" id="txtConfirmPassword" class="form-control"
                          placeholder=" Confirm Password" />
                          <span id = "message" style="color:red"> </span>
                        </div>
                        <div class="d-flex align-items-center justify-content-center pb-4">
                          <button type="submit" class="btn btn-outline-success" onclick="return Validate()"  value="submit">Create</button>
                        </div>
                        
